{
  "printWidth": 100,
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-packagejson"],
  "tailwindFunctions": ["clsx", "tw"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.mdx", "*.js", "*.jsx", "*.css", "*.scss"],
      "options": {
        "singleQuote": true,
        "tabWidth": 4
      }
    }
  ]
}
